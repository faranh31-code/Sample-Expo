{
  "cli": {
    "version": ">= 10.0.0"
  },
  "build": {
    "production": {
      "android": {
        "buildType": "apk",
        "autoIncrement": "version",
        "gradleCommand": ":app:assembleRelease"
      },
      "ios": {
        "autoIncrement": "buildNumber",
        "buildConfiguration": "Release"
      }
    },
    "production-store": {
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": "versionCode"
      },
      "ios": {
        "autoIncrement": "buildNumber",
        "buildConfiguration": "Release",
        "distribution": "store"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
